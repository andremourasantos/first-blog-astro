---
import BaseLayout from "../layouts/BaseLayout.astro";
import PostCard from "../components/PostCard.astro";
const allPosts = await Astro.glob("../pages/posts/*.md")

const pageTitle:string = "Blog";
---

<BaseLayout pageTitle={pageTitle}>
  <p>This is where I will post about my journey learning Astro.</p>
  <ul>
    {allPosts.map(post => <PostCard imageUrl={post.frontmatter.image.url} imageAlt={post.frontmatter.alt} title={post.frontmatter.title} description={post.frontmatter.description} pubDate={post.frontmatter.pubDate} postUrl={post.url} />)}
  </ul>
</BaseLayout>

<style>
  ul {
    list-style-type: none;
    display: flex;
    flex-wrap: wrap;
    gap: 32px;
    justify-content: center;
    align-items: flex-start;
  }
</style>
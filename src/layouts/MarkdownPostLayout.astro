---
import BaseLayout from "./BaseLayout.astro";
import "../styles/global.css";

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title} showPageTitle={false}>
  <main>
    <section id="details">
      <img src={frontmatter.image.url} alt={frontmatter.image.alt}>
      <h1>{frontmatter.title}</h1>
      <p>{frontmatter.description}</p>
      <div>
        <p>Written by {frontmatter.author}</p>
        <p>Published in {frontmatter.pubDate}</p>
      </div>
      <ul class="tags">{frontmatter.tags.map(tag => <a class="tag" href={`/tags/${tag}`}><li>{tag}</li></a>)}</ul>
    </section>
    <article>
      <slot />
    </article>
  </main>
</BaseLayout>

<style>
  main {
    background-color: white;
    border-radius: 32px;
  }

  section#details {
    margin: 32px auto;
    padding: 32px;
    background-color: antiquewhite;
    border-radius: 32px;
  }

  section#details img {
    border-radius: 24px;
    width: 100%;
    height: 100%;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    list-style-type: none;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }

  .tags a {
    color: #00539F;
    text-decoration: none;
  }
  
  .tags a:hover, a:active, a:focus {
    text-decoration: underline;
  }

  main article {
    padding: 0px 32px 32px 32px;
  }
</style>
---
import BaseLayout from "./BaseLayout.astro";
import "../styles/global.css";

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title} showPageTitle={false}>
  <main>
    <section id="details">
      <img src={frontmatter.image.url} alt={frontmatter.image.alt}>
      <h1>{frontmatter.title}</h1>
      <p>{frontmatter.description}</p>
      <div>
        <p>Written by {frontmatter.author}</p>
        <p>Published in {frontmatter.pubDate}</p>
      </div>
    </section>
    <article>
      <slot />
    </article>
  </main>
</BaseLayout>

<style>
  main {
    background-color: white;
    border-radius: 32px;
  }

  section#details {
    margin: 32px auto;
    padding: 32px;
    background-color: antiquewhite;
    border-radius: 32px;
  }

  section#details img {
    border-radius: 24px;
    width: 100%;
    height: 100%;
  }

  main article {
    padding: 0px 32px 32px 32px;
  }
</style>